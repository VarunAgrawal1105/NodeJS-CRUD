<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" 
    crossorigin="anonymous">
    <title>Document</title>
</head>
<body style="background-color:#D18700 ;">
    <div class="container-fluid">
        <div class="d-flex flex-row-reverse" style="background-color: chartreuse; border: 2px dotted black; border-radius: 10px;">
            <a href="/posts/new" class="btn bg-white" style="margin-right: 20px;">New Post</a>
        </div>
        <div class="container-fluid"style="background-color: #FFB52E; border: 2px dotted black; border-radius: 10px; height:500px ">
            <br><br>
    <% posts.forEach(post =>{ %>
        <div class="card m-2" style="border: 2px solid black; border-radius: 10px;">
            <a href="posts/<%= post.id%>" class="btn btn-primary bg-light">
            <div class="card-body">
                <h4 class="card-title text-start text-secondary"><%= post.title %></h4>
            </div>
            </a> 
        </div>
    <%})%>
</div>
</div>
</body>
</html>